{
  "moduleFileExtensions": ["js", "json", "ts"],
  "rootDir": ".",
  "testEnvironment": "node",
  "testRegex": ".e2e-spec.ts$",
  "transform": {
    "^.+\\.(t|j)s$": "ts-jest"
  },
  "moduleNameMapper": {
    "^@/(.*)$": "<rootDir>/../src/$1",
    "^@pipes/(.*)$": "<rootDir>/../src/pipes/$1",
    "^@db/(.*)$": "<rootDir>/../db/$1"
  },
  "forceExit": true,
  "detectOpenHandles": true
}
